<script>
    document.addEventListener("DOMContentLoaded", function () {
        var navLinks = document.querySelectorAll('.item_nav .nav-link');
        navLinks.forEach(function (navLink) {
            navLink.addEventListener('click', function (event) {
                navLinks.forEach(function (link) {
                    link.style.color = "#000";
                });

                navLink.style.color = "#ee4d2d";

                document.querySelectorAll('.after-element').forEach(function (element) {                 
                    element.parentNode.removeChild(element);
                });

                var afterElement = document.createElement('div');
                afterElement.classList.add('after-element');

                navLink.parentNode.insertBefore(afterElement, navLink.nextSibling);
            });
        });
    });
 
    $('#pending').click(function () {
        $('#load_product').load('/Account/PendingAction/?qa=1');
    });
    $('#cancel').click(function () {
        $('#load_product').load('/Account/PendingAction?qa=2');
    });
    $('#delivering').click(function () {
