@model Jewelly.Models.UserRegMst
@{
    ViewBag.Title = "General";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<div id="toast">
    @if (ViewBag.EditinforMg != null)
    {
        <script>
            $(document).ready(function () {
                $("toast").load(checkGeneral());
            })
        </script>
        <input type="hidden" class="success" value="@ViewBag.EditinforMg" />
    }
    else if (ViewBag.ErrorEditinforMg != null)
    {
        <script>
            $(document).ready(function () {
                $("toast").load(checkGeneralError());
            })
        </script>
        <input type="hidden" class="fail" value="@ViewBag.ErrorEditinforMg" />
    }
    else if (ViewBag.EditpMg != null)
    {
        <script>
            $(document).ready(function () {
                $("toast").load(checkPassGeneral());
            })
        </script>
        <input type="hidden" class="fail" value="@ViewBag.EditpMg" />
    }
    else if (ViewBag.ErrorpsMg != null)
    {
        <script>
            $(document).ready(function () {
                $("toast").load(checkPassGeneralError());
            })
        </script>
        <input type="hidden" class="fail" value="@ViewBag.ErrorpsMg" />
    }
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="parallax-infor">
                <p class="titlecontent">General</p>
                <p class="under-border"></p>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-3 mb_edit tablet_Edit">
            <img class="details--admin edit_imgcus" id="uploadedImage" src="@Model.Path_photo@Model.photo" />
        </div>
        <div class="col-md-4 edit_cus_infor mb-4">
            <p class="name--admin">@Model.userFname @Model.userLname</p>
            @if (Model.state == "Online")
            {
                <p class="state--admin"><i class="fas fa-circle"></i> Online</p>
            }
            else
            {
                <p class="state--admin state--admin--off"><i class="fas fa-circle state--admin--off"></i> Offline</p>

            }

            <p><i class="fas fa-phone icon--admin mt-3"></i>@Model.mobNo</p>
            <p><i class="fas fa-calendar-alt icon--admin mt-3"></i>@Model.dob</p>
            <p><i class="fas fa-envelope icon--admin mt-3"></i>@Model.emailID</p>
            <p><i class="fas fa-map-marker-alt icon--admin mt-3"></i>@Model.address</p>

            <div id="dropZone" class="drap--drop mt-4" onchange="chooseFile(this)">
                <p class="drapdrop--title">Drap & Drop File Avatar Here</p>
                <p class="drapdrop--title">Accept: .JPG, .JPEG, .PNG</p>
                <input type="file" id="fileInput" style="display: none;" />
                <input type="hidden" id="id" value="@Model.userID" />
            </div>
        </div>
        <div class="col-md-3 mb-4 ipad_">
            <a href="/Account/Information/@Model.userID" class="btns form-control edit--admin table--width mx-3 "><i class="fas fa-info-circle"></i> Change Informartion</a>
            <a href="/Account/change/@Model.userID" class="btns form-control mx-3 edit--admin table--width change--admin mt-2"><i class="fas fa-cogs"></i> Change Password</a>
        </div>
    </div>
</div>
<script src="~/Content/Script/DrapandDropcus.js"></script>
<script>
    setTimeout(function () {
        $('#msgAlert').fadeOut('slow');
    });
</script>