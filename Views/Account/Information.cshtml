@model Jewelly.Models.UserRegMst
@{
    ViewBag.Title = "Information";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <p class="title--gen">Information</p>
        </div>
    </div>
    <form action="/Account/Information" method="post">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                    <div class="form-group">
                        <label class="mobile--left">User First Name:</label>
                        <input type="text" class="input--left form-control username" name="userLname" placeholder="Last Name" value="@Model.userLname" />
                    </div>
                    <div class="form-group">
                        <label class="mobile--left">User last Name:</label>
                        <input type="text" class="input--left form-control username" name="userFname" value="@Model.userFname" />
                    </div>
                    <div class="form-group">
                        <label class="mobile--left">Address:</label>
                        <input type="text" class="input--left form-control address" name="address" value="@Model.address" />
                    </div>
                    <div class="form-group">
                        <label class="mobile--left">Birthday:</label>
                        <input type="text" class="input--left form-control dob" placeholder="dd/yy/mmmm" name="dob" value="@Model.dob" oninput="checkBirthday()" />
                    </div>
                    <div class="form-group">
                        <label class="mobile--left">City:</label>
                        <input type="text" class="input--left form-control username" value="@Model.city" name="city" />
                    </div>
                    <div class="form-group">
                        <label class="mobile--left">Phone:</label>
                        <input type="text" class="input--left form-control username" name="mobNo" value="@Model.mobNo" />
                    </div>
                    <div class="form-group">
                        <label class="mobile--left">Email:</label>
                        <input type="email" class="input--left form-control emailID" name="emailID" value="@Model.emailID" oninput="checkE()" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn_change btn--info mt-3">Submit</button>
                    </div>
            </div>
            <div class="col-md-3"></div>
        </div>
    </form>
</div>
<script>
    function checkBirthday() {
        var dob = document.querySelector('.dob');
        var dateRegex = /^\d{4}-\d{2}-\d{2}$/;
        if (!dateRegex.test(dob.value)) {
            dob.style.border = '1px solid #B80000';
            return false;
        } else {
            dob.style.border = '1px solid green';
            return true;
        }
    }
    function checkE() {
        var email = document.querySelector('.emailID');

        if (!pattern.test(email.value)) {
            email.style.border = '1px solid #B80000';
            return false;
        } else {
            email.style.border = '1px solid green';
            return true;
        }
    }
</script>