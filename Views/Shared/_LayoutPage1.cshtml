<script src="~/Content/Script/Function.js"></script>
<script>
    var header = document.getElementById('header');
    var mobileMenu = document.getElementById('mobile-menu');
    var headerHeight = header.clientHeight;

    //close menu
    mobileMenu.onclick = function () {
        console.log(header.clientHeight)
        var isClosed = header.clientHeight === headerHeight;
        if (isClosed) {
            header.style.height = '250px';
            header.style.overflow = 'visible';
            header.style.transition = 'none';
            mobileMenu.style.transform = 'rotate(90deg)';
        } else {
            header.style.height = null;
            mobileMenu.style.transform = null;
            header.style.overflow = 'hidden';
            header.style.transition = '.75s all ease'
        }
    }

    //auto close click select
    var menuItems = document.querySelectorAll('#nav li a[href*=""]');
    for (var i = 0; i < menuItems.length; i++) {
        var menuItem = menuItems[i];

        menuItem.onclick = function () {
            var isParenMenu = this.nextElementSibling && this.nextElementSibling.classList.contains('subnav');
            if (isParenMenu) {
                event.preventDefault();
            } else {
                header.style.height = null;
            }
        }
    }
</script>
<script>
    window.addEventListener('scroll', function () {
        var scroll = document.querySelector('.scrollTop');
        scroll.classList.toggle('active', window.scrollY > 500)
    })

    function scrollToTop() {
        window.scrollTo({
            top: 0,
            behavior: 'smooth'
        })
    }
</script>
<script>
    AOS.init();
    function load(img) {
        const url = img.getAttribute('lazy_src')
        img.setAttribute('src', url)
    }
    function ready() {
        if ('IntersectionObserver' in window) {
            var lazyimg = document.querySelectorAll('[lazy_src]')
            let obsesr = new IntersectionObserver(entries => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        load(entry.target)
                    }
                })
            });
            lazyimg.forEach(img => {
                obsesr.observe(img)
            })
        } else {

        }
    }
    document.addEventListener('DOMContentLoaded', ready)
</script>
