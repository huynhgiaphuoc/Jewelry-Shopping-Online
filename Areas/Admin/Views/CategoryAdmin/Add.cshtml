
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2 class="title--admin">Add Category</h2>
<div class="container container--left">
    <div class="row mt-5">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form action="/Admin/CategoryAdmin/Add" method="post" enctype="multipart/form-data">
                <div class="container-fluid brand__input__container">
                    <input type="text" class="form-control" placeholder="Enter Category Name" name="CatName">
                    <button class="btn form-control mt-4 edit--admin change--admin" type="submit" name="create">Create</button>
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>

