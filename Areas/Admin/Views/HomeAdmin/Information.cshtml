@model Jewelly.Models.AdminLoginMst
@{
    ViewBag.Title = "Information";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2 class="title--admin">Information</h2>
<h6 class="sub--title">[ @Model.userName ]</h6>
<div class="container container--left mt-5">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form action="/Admin/HomeAdmin/Information" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Username:</label>
                    <input type="text" class="form-control" value="@Model.userName" readonly name="userName" required>
                </div>
                <div class="form-group">
                    <label>Name Employee:</label>
                    <input type="text" class="form-control" value="@Model.Name_employee" readonly name="Name_employee" />
                </div>
                <div class="form-group">
                    <label>Birthday:</label>
                    <input type="text" class="form-control" value="@Model.Birthday" required name="Birthday">
                </div>
                <div class="form-group">
                    <label>Phone:</label>
                    <input type="tel" class="form-control" name="Phone" value="@Model.Phone" required>
                </div>
                <div class="form-group">
                    <label>Email:</label>
                    <input type="email" class="form-control" name="Email" value="@Model.Email" required>
                </div>
                <div class="form-group">
                    <label>Address:</label>
                    <input type="text" class="form-control" value="@Model.Address" name="Address" required />
                </div>
                <div class="row mb-4">
                    <div class="col-md-6">
                        <button type="submit" name="create" class="btn form-control mt-3 edit--admin change--admin"><i class="bi bi-gear "></i>Save Change</button>
                    </div>
                    <div class="col-md-6">
                        <a href="@Url.Action("General","HomeAdmin")" class="btn form-control mt-3 edit--admin">Back</a>
                    </div>
                </div>
                
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>        
</div>


