@model List<Jewelly.Models.Inquiry>
@{
    ViewBag.Title = "Inquiry";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2 class="title--admin">Inquiry</h2>
<hr class="mx-5" />
<div class="search--group">
    <form action="/Admin/HomeAdmin/Inquiry" method="post">
        <input type="text" placeholder="Name" name="search" class="form-control btn--search btn--search--inquiry" />
        <input type="submit" class="btn btn-primary btn--submit--admin btn--submit--inquiry" value="Search" />
    </form>
</div>
<hr class="mx-5" />
<div class="container container--left">
    <div class="row">
        <div class="col-md-12">
            <table class="table _gold">
                <thead>
                    <tr>
                        <td class="text--table">Id</td>
                        <td class="text--table">Name</td>
                        <td class="text--table">Email</td>
                        <td class="text--table">Contact</td>
                        <td class="text--table">City</td>
                        <td class="text--table">Date</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text--table">@item.ID </td>
                            <td class="text--table">@item.Name</td>
                            <td class="text--table">@item.EmailID</td>
                            <td class="text--table">@item.Contact</td>
                            <td class="text--table">@item.City</td>
                            <td class="text--table">@item.Cdate</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

