@model List<Jewelly.Models.ItemMst>
@{
    ViewBag.Title = "Item";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}


<div id="toast">
    @if (ViewBag.AddDimMstMg != null)
    {
        <script>
            $(document).ready(function () {
                $("toast").load(checkAddGold());
            })</script>
        <input type="hidden" class="success" value="@ViewBag.AddDimMstMg" />
    }
    else if (ViewBag.AddDimMstError != null)
    {
        <script>
            $(document).ready(function () {
                $("toast").load(checkAddGoldError());
            })</script>
        <input type="hidden" class="fail" value="@ViewBag.AddDimMstError" />
    }
    else if (ViewBag.EditDimInfoMstMg != null)
    {
        <script>
            $(document).ready(function () {
                $("toast").load(checkEditGold());
            })</script>
        <input type="hidden" class="fail" value="@ViewBag.EditDimInfoMstMg" />
    }
    else if (ViewBag.EditDimInfoMstMg != null)
    {
        <script>
            $(document).ready(function () {
                $("toast").load(checkEditGoldError());
            })</script>
        <input type="hidden" class="fail" value="@ViewBag.EditDimInfoMstMg" />
    }
    else if (ViewBag.DeleteDimMstMg != null)
    {
        <script>
            $(document).ready(function () {
                $("toast").load(checkDeleteAdmin());
            })</script>
        <input type="hidden" class="success" value="@ViewBag.DeleteDimMstMg" />
    }
</div>
<h2 class="title--admin">Item</h2>
<hr class="mx-5" />
<div class="search--group">
    <a href="/Admin/ItemMst/Add" class="btn btn-primary btn--add"><i class="fa fa-plus"></i> Item</a>
    @*<form action="/Admin/ItemMst/Item" method="post">
        <input type="text" placeholder="Name" name="oc" class="form-control btn--search btn--search--item" />
        <input type="submit" class="btn btn-primary btn--submit--admin btn--submit--item" value="Search" />
    </form>*@
</div>
<hr class="mx-5" />
<div class="container-fluid container--left">
    @foreach (var item in Model)
    {
        <div class=" row mt-2 list_form mb-4">
            <div class="col-sm-2 _ec">
                <img src="~/Content/Image/Layout/TestforItem.jpg" class="img_cus edit_img_item" />

            </div>
            <div class="col-sm-3 _ec txt_line_">
                <p class="esit_space" style="font-size: 20px;">
                    <i class="fas fa-gem"></i>@item.Style_Code
                </p>
                <p class="esit_space">
                    <i class="fa-solid fa-virus"></i>@item.Pairs
                </p>
                <p class="esit_space">
                    <i class="fa-solid fa-coins"></i>@item.Quantity
                </p>

                <p>
                    <i class="fa-solid fa-splotch"></i>@item.Gold_Wt
                </p>

                <p class="mt-3">
                    <i class="fa-solid fa-gem"></i>@item.Stone_Wt
                </p>
                <p>
                    <i class="fa-brands fa-dropbox"></i>@item.Net_Gold
                </p>
                <p>
                    <i class="fa-solid fa-spa"></i>@item.Wstg_Per
                </p>

                <p>
                    <i class="fa-solid fa-calendar-days"></i>@item.Wstg
                </p>
                <p>
                    <i class="fa-solid fa-user-secret"></i>@item.Tot_Gross_Wt
                </p>

            </div>
            <div class="col-sm-3 _ec txt_line_">
                <p>
                    <i class="fa-solid fa-gem"></i>@item.Gold_Rate
                </p>
                <p>
                    <i class="fa-solid fa-city"></i>@item.Gold_Making
                </p>
                <p>
                    <i class="fa-solid fa-barcode"></i>@item.Stone_Making
                </p>
                <p>
                    <i class="fa-solid fa-globe"></i>@item.Other_Making
                </p>
                <p>
                    <i class="fa-solid fa-burst"></i>@item.Tot_Making
                </p>
                <p>
                    <i class="fa-solid fa-money-bill"></i>@item.MRP
                </p>
                <p>
                    <i class="fa-solid fa-comment"></i>@item.Prod_Quality
                </p>
            </div>
            <div class="col-sm-3 _ec text_Edit">
               
                <div class="row mt-3 _edit_btn_item">
                    <div class="col-md-6 mb-3">
                        <a href="/Admin/ItemMst/Edit/@item.Style_Code" class="btn edit--admin text-center ">
                            <i class="fa-solid fa-pen" style="color: #ffffff;"></i>
                            Edit
                        </a>
                    </div>
                    <div class="col-md-6">
                        <td class="text--table">
                            <a href="/Admin/ItemMst/Delete/@item.Style_Code" class="btn form-control  edit--admin delete--admin text-center">Delete</a>
                        </td>
                    </div>

                </div>

          
               
            </div>
            <div class="col-md-1"></div>

        </div>

    }
</div>

<script src="~/Areas/Admin/Content/Script/messageAdmin.js"></script>

