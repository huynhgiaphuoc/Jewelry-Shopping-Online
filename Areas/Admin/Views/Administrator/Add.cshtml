
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2 class="title--admin">Add Administrator</h2>
<div class="container container--left">
    <form action="/Admin/Administrator/Add" method="post">
        <div class="row mt-5">
            <div class="col-md-6">
               <img class="demo--img" src="~/Areas/Admin/Content/Image/avatardefault.jpg"/>
               <p class="mt-3" id="selectName"></p>
               <div class="row mt-3">
                   <div class="col-md-2"></div>
                   <div class="col-md-4">
                       <p class="demo--content"><i class="fas fa-user demo--icon"></i> Username: </p>
                       <p class="demo--content mt-3"><i class="fas fa-key demo--icon"></i> Password: </p>
                       <p class="demo--content mt-3"><i class="fas fa-envelope demo--icon"></i> Email: </p>
                       <p class="demo--content mt-3"><i class="fas fa-phone demo--icon"></i> Moblie: </p>
                       <p class="demo--content mt-3"><i class="fas fa-calendar-alt demo--icon"></i> Birthday: </p>
                       <p class="demo--content mt-3"><i class="fas fa-map-marker-alt demo--icon"></i> Address: </p>
                   </div>
                   <div class="col-md-4">
                       <p class="" id="selectNameu"></p>
                       <p class="mt-4" id="selectPass"></p>
                       <p class="mt-4" id="selectEmail"></p>
                       <p class="mt-4 demo--mt" id="selectMobno"></p>
                       <p class="mt-4 demo--mt--dob" id="selectdob"></p>
                       <p class="mt-4 demo--mt--add" id="selectAdd"></p>
                   </div>
                   <div class="col-md-2"></div>
               </div>
            </div>
            <div class="col-md-5">
                <div class="form-group">
                    <label class="form-text">Name</label>
                    <input type="text" class="form-control" name="name" id="name" oninput="myChange()" />
                </div>
                <div class="form-group">
                    <label class="form-text">Username</label>
                    <input type="text" class="form-control" name="username" id="username" oninput="myChange()" />
                </div>
                <div class="form-group">
                    <label class="form-text">Password</label>
                    <input type="password" class="form-control" name="password" id="password" oninput="myChange()" />
                </div>
                <div class="form-group">
                    <label class="form-text">Email</label>
                    <input type="text" class="form-control" name="emalID" id="emalID" oninput="myChange()" />
                </div>
                <div class="form-group">
                    <label class="form-text">Phone</label>
                    <input type="text" class="form-control" name="mobNo" id="mobNo" oninput="myChange()" />
                </div>
                <div class="form-group">
                    <label class="form-text">Birthday</label>
                    <input type="date" class="form-control" name="dob" id="dob" oninput="myChange()" />
                </div>
                <div class="form-group">
                    <label class="form-text">Address</label>
                    <input type="text" class="form-control" name="address" id="address" oninput="myChange()" />
                </div>
            </div>
            <div class="col-md-1"></div>
        </div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="submit" class="form-control mt-4 btn-primary change--admin" value="Create" onchange="myChange()" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <a href="@Url.Action("Manager","Administrator")" class="btn form-control mt-4 edit--admin">Back</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>
    </form>
</div>
<script>
    function myChange() {
        let x = document.getElementById("username").value;
        document.getElementById("selectNameu").innerHTML = x;

      
        let y = document.getElementById("password").value;
        document.getElementById("selectPass").textContent = "*".repeat(y.length);

        let z = document.getElementById("name").value;
        document.getElementById("selectName").innerHTML = z;

        let a = document.getElementById("emalID").value;
        document.getElementById("selectEmail").innerHTML = a;

        let b = document.getElementById("mobNo").value;
        document.getElementById("selectMobno").innerHTML = b;

        let c = document.getElementById("dob").value;
        document.getElementById("selectdob").innerHTML = c;

        let d = document.getElementById("address").value;
        document.getElementById("selectAdd").innerHTML = d ;

    }
</script>
