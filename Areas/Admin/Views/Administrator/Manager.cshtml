@model List<Jewelly.Models.AdminLoginMst>
@{
    ViewBag.Title = "Manager";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

<div id="toast">
    @if (ViewBag.DeleteMg != null)
    {
        <script>
            $(document).ready(function () {
                $("toast").load(checkDeleteAdmin());
            })
        </script>
        <input type="hidden" class="success" value="@ViewBag.DeleteMg" />
    }
    else if (ViewBag.ErrorMg != null)
    {
        <script>
            $(document).ready(function () {
                $("toast").load(checkErrorPass());
            })
        </script>
        <input type="hidden" class="fail" value="@ViewBag.ErrorMg" />
    }
    else if (ViewBag.AddMg != null)
    {
        <script>
            $(document).ready(function () {
                $("toast").load(checkAddAdmin());
            })
        </script>
        <input type="hidden" class="fail" value="@ViewBag.AddMg" />
    }
    else if (ViewBag.ErrorAddMg != null)
    {
        <script>
            $(document).ready(function () {
                $("toast").load(checkErrorAdd());
            })
        </script>
        <input type="hidden" class="fail" value="@ViewBag.ErrorAddMg" />
    }
</div>

<h2 class="title--admin">Admin Manager</h2>
<hr class="mx-5" />
<div class="search--group">
    <a href="/Admin/Administrator/Add" class="btn btn-primary btn--add"><i class="fa fa-plus"></i> Administrator</a>
    <form action="/Admin/Administrator/Manager" method="post">
        <input type="text" placeholder="Username" name="search" class="form-control btn--search" />
        <input type="submit" class="btn btn-primary btn--submit--admin" value="Search" />
    </form>
</div>
<hr class="mx-5" />
<div class="container-fluid container--left">
    @foreach (var item in Model)
    {
        <div class="row mt-5 mb-3">
            <div class="col-md-3">
                <img src="@item.Path_avt@item.Avatar" class="img--admin" />
            </div>
            <div class="col-md-5">
                <p class="name--admin">@item.Name_employee</p>
                <p class="state--admin"><i class="fas fa-circle"></i> Online</p>
                <p class="user--admin"><i class="fas fa-user icon--admin"></i> @item.userName</p>
                <p><i class="fas fa-phone icon--admin mt-2"></i>@item.Phone</p>
                <p><i class="fas fa-calendar-alt icon--admin mt-2"></i>@item.Birthday</p>
                <p><i class="fas fa-envelope icon--admin mt-2"></i>@item.Email</p>
                <p><i class="fas fa-map-marker-alt icon--admin mt-2"></i>@item.Address</p>
            </div>
            <div class="col-md-3">
                <a href="/Admin/Administrator/Details/@item.AdminID" class="btn btn-warning edit--admin change--admin mt--btn"><i class="fas fa-info-circle"></i> Detail</a>
                <a href="/Admin/Administrator/Delete/@item.AdminID" class="btn btn-primary edit--admin delete--admin mt-2"><i class="fas fa-trash"></i> Delete</a>
            </div>
        </div>
    }
</div>
<script src="~/Areas/Admin/Content/Script/messageAdmin.js"></script>


