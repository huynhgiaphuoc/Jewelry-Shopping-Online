@model Jewelly.Models.JewelTypeMst
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2 class="title--admin">Edit</h2>
<h6 class="sub--title">[ @Model.Jewellery_Type ]</h6>
<div class="container container--left">
    <div class="row mt-5">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form action="/Admin/JewelTypeMst/Edit/@Model.ID" method="post">
                <input type="hidden" name="ID" value="@Model.ID" />
                <label for="JewelleryType">Jewellery Type</label>
                <input type="text"
                       class="form-control"
                       id="JewelleryType"
                       name="Jewellery_Type"
                       placeholder="JewelleryType"
                       value="@Model.Jewellery_Type" />
                <div class="row">
                    <div class="col-md-6">
                        <button type="submit" class="form-control mt-4 btn-primary change--admin">Save</button>
                    </div>
                    <div class="col-md-6">
                        <a href="@Url.Action("Jewel","JewelTypeMst")" class="btn form-control mt-4 edit--admin">Back</a>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>

